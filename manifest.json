{
    "manifest_version": 3,
    "name": "CheBot",
    "description": "Allows use ChatGPT like a API.",
    "version": "1.0.0",
    "author": "Juan Gabriel Machuca",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/favicon-16x16.png",
            "32": "images/favicon-32x32.png"
        }
    },
    "icons": {
        "16": "images/favicon-16x16.png",
        "32": "images/favicon-32x32.png"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*/*"
    ]
}